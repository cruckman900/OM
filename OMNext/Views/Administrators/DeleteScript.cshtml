@model OMNext.Models.Script
@{ 
    ViewData["Title"] = "Delete Script";
}

<div class="container">
    <h2 class="light-text">Delete Script</h2>

    <div class="col-md-12 pt-2 bg-light opac-85 pb-2">
        <p class="text-danger">@ViewData["ErrorMessage"]</p>
        <h3>Are you sure you want to delete this script?</h3>
        <div>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Title)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Title)
                </dd>
            </dl>

            <form asp-action="DeleteScript">
                <input type="hidden" asp-for="ScriptID" />
                <input type="submit" value="Delete Script" class="btn btn-primary" />
                <input type="button" class="btn btn-default" value="Go Back" onclick="location.href='@Url.Action("Index", "Administrators")'" />
            </form>
        </div>
    </div>
</div>