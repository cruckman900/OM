@model IEnumerable<OMNext.Models.Administrator>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<div class="container">

    <input type="button" class="btn btn-primary" style="width: 200px" value="Add a new administrator" onclick="location.href='@Url.Action("AddAdministrator", "Administrators")'" />

    <table class="table table-striped table-hover auto">
        <thead>
            <tr>
                <th style="width: 140px;"></th>
                <th style="width: 600px;">Name</th>
            </tr>
        </thead>
        <tbody class="border">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a class="btn btn-secondary btn-sm" asp-action="EditAdministrator" asp-route-id="@item.AdministratorID">Edit</a>
                        <a class="btn btn-secondary btn-sm" asp-action="DeleteAdministrator" asp-route-id="@item.AdministratorID">Delete</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>