<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OMNext</title>

    <link rel="apple-touch-icon" sizes="120x120" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="theme-color" content="#ffffff">
    <meta name="author" content="Christopher L Ruckman">
    <!--<meta name="referrer" content="strict-origin-when-cross-origin" />-->

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
</head>
<body class="bg" style="height: 825px; background-color: #000000;">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark box-shadow mb-3">
            <div class="container">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @if (ViewData["Team"] == null)
                {
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand py-0 my-0 border-0">
                        <img style="height: 50px; position: relative;" src="~/images/OMLogo.png" />
                    </a>
                }
                else
                {
                    <img style="height: 50px;" class="navbar-brand py-0 my-0 border-0" position: relative;" src="../images/OMLogo.png" />
                }
                @if (ViewData["Team"] == null)
                {
                    <div class="collapse navbar-collapse" id="nav-content">
                        <ul class="navbar-nav">
                            <li class="nav-item px-2"><a asp-area="" asp-controller="Administrators" asp-action="Index" class="nav-link border-0">Administrators</a></li>
                            <li class="nav-item dropdown px-2">
                                <a class="nav-link dropdown-toggle border-0" href="#" id="FlightDirectorDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Flight Directors</a>
                                <div class="dropdown-menu" aria-labelledby="FlightDirectorDropdown">
                                    <a class="dropdown-item" asp-area="" asp-controller="FlightDirectors" asp-action="FDLogin">Start New Mission</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="FlightDirectors" asp-action="FDRelog">Enter Existing Mission</a>
                                </div>
                            </li>
                            <li class="nav-item px-2"><a asp-area="" asp-controller="Teams" asp-action="TeamLogin" class="nav-link border-0">Teams</a></li>
                        </ul>
                    </div>
                }
            </div>
        </nav>
    </header>
    <div class="container-fluid h-100 d-flex flex-column">
        <main role="main" class="pb-3 flex-column justify-content-center">
            @RenderBody()
        </main>
    </div>

    <footer class="light-text px-2">
        <p class="text-center">
            &copy; 1999 - <span id="year"></span> - by Wheeling University/Challenger Learning Center. 316 Washington Ave., Wheeling WV, 26003-6243. All rights reserved.
            <a href="http://www.cet.edu/?cat=about_us&page=37" target="_blank">Privacy Policy</a>
            and <a href="http://www.cet.edu/?cat=about_us&page=36" target="_blank">Terms of Use</a>
        </p>
        <script>
            function getYear() {
                var d = new Date();
                var n = d.getFullYear();
                document.getElementById("year").innerHTML = n;
            }
            getYear();
        </script>
    </footer>
    @*<script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

        <script src="~/js/signalr/dist/browser/signalr.js"></script>*@
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>