@model OMNext.Models.Team
@{ 
    ViewData["Title"] = "Team Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2 class="light-text">@ViewData["Title"]</h2>
    <div class="col-md-12 pt-2 bg-light opac-85">
        <h3>@ViewData["Message"]</h3>

        <form asp-action="TeamLogin">

            <div asp-validation-summary="ModelOnly" class="danger"></div>

            <div class="row">
                <div class="form-group col col-md-12">
                    <input type="hidden" id="myTeamName" asp-for="TeamName" />
                </div>
            </div>

            <div class="row">
                <div class="form-group col col-md-12">
                    <label asp-for="Password" class="control-label"></label>
                    <input id="password" asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>

            <div id="btnOpenModal" class="row">
                <div class="form-group col col-md-12">
                    <button id="btnOpenTeamModal" type="button" class="btn btn-secondary" data-toggle="modal" data-target="#teamModal">Select Team</button>
                </div>
            </div>

            <div class="row pb-4">
                <div class="col col-md-12">
                    <input id="teamLoginSubmit" type="submit" value="Submit" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>
<div class="modal fade" id="teamModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content bg-light opac-85">
            <div class="modal-header">
                <h5 class="modal-title" id="teamTitle">Choose your team.</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="form-group col col-md-12">
                        <label asp-for="TeamName" class="control-label"></label>
                        <select asp-for="TeamName" asp-items="Html.GetEnumSelectList<TeamName>()" class="form-control">
                            <option selected="selected" value="">Please select Team</option>
                        </select>
                        <span asp-validation-for="TeamName" class="text-danger" />
                    </div>
                </div>            
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button id="btnSendTeamSelection" type="button" class="btn btn-primary">Ok</button>
            </div>
        </div>
    </div>
</div>