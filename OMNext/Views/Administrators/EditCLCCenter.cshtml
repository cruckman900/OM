@model OMNext.Models.CLCCenter
@{
    ViewData["Title"] = "Edit CLC Center";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2 class="light-text">@ViewData["Message"]</h2>

    <form asp-action="ModifyCLCCenter">
        <div asp-validation-summary="ModelOnly" class="danger"></div>
        <input type="hidden" asp-for="CLCCenterID" />
        @{ await Html.RenderPartialAsync("_CLCCenterEditorFormPartial"); }
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}