@model IEnumerable<OMNext.Models.CLCCenter>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<div class="container">
    <input type="button" class="btn btn-primary" style="width: 200px" value="Add a new center" onclick="location.href='@Url.Action("AddCLCCenter", "Administrators")'" />
    <table class="table table-striped table-hover auto">
        <thead>
            <tr>
                <th style="width: 140px;"></th>
                <th>CLC Center</th>
                <th>Abbr</th>
                <th>City</th>
                <th>State</th>
                <th>Zip</th>
                <th>Phone</th>
            </tr>
        </thead>
        <tbody class="border">
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    <a class="btn btn-secondary btn-sm" asp-action="EditCLCCenter" asp-route-id="@item.CLCCenterID">Edit</a>
                    <a class="btn btn-secondary btn-sm" asp-action="DeleteCLCCenter" asp-route-id="@item.CLCCenterID">Delete</a>
                </td>
                <td>@Html.DisplayFor(modelItem => item.CenterName)</td>
                <td>@Html.DisplayFor(modelItem => item.Abbreviation)</td>
                <td>@Html.DisplayFor(modelItem => item.City)</td>
                <td>@Html.DisplayFor(modelItem => item.State)</td>
                <td>@Html.DisplayFor(modelItem => item.Zipcode)</td>
                <td>@Html.DisplayFor(modelItem => item.Phone)</td>
            </tr>
            }
        </tbody>
    </table>

</div>